	<%= stylesheet_link_tag("application", "bootstrap.min") %>
	<title>
		Mails
	</title>
	
	<body>	
	<div class="col-md-12" style="margin-top:40px; background:#FFFFFF; box-shadow:0px 0px 10px #666666; border:1px solid #CCCCCC;opacity: 0.8;filter:alpha(opacity=80);"> 
   
		<div>
			<%= link_to "", { :remote => true, :type => session[:mails_type] }, :id => 'refresh' %>
			<table class="table table-hover table-condensed" id="t1"  >
				<tr>
				<td ><center><h2 style="margin-left:5px" > Mails </h2></center></td>
