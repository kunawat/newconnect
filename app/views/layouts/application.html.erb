<!DOCTYPE html>
<html>

<head>
  <!-- Bootstrap core CSS -->
  <title>Connectlls</title>
    <%= stylesheet_link_tag('bootstrap.min', 'sticky-footer-navbar', 'custom') %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag("application") %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'tab-favicon.ico' %>
  </head>
<body>
 

   <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
       <div class="container-fluid"> 
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="navbar-brand" >
              <%= link_to("ConnectLLS", {:controller => 'home', :action => 'home_page'}, class: "linktag") %>
              </div>
        </div>  
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav nav-tab nav-pills pull-right custom-li">
            
            <li>
              <%= link_to("Contact us", {:controller => 'connect', :action => 'contact_us'}) %>

            </li>
            <li>
              <%= link_to("About us", {:controller => 'connect', :action => 'about_us'}) %>
            </li>
            <% if session[:user_id] == nil %>
              <li class="dropdown">
                <%= link_to(raw("Login/Register" +("<b class= 'caret'></b>")), "#", :class => "dropdown-toggle", :data => {:toggle=>"dropdown"}) %>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to("Login", {:controller => 'connect', :action => 'login_page'}) %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to("Register", {:controller => 'signup', :action => 'create_new_user'}) %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li class="home">
                <%= link_to("Home", :controller => 'home', :action => 'home_page') %>
              </li>
              <li>
                 <%= link_to raw("Mail "), :controller => 'mails', :action => 'show_mails', :type => 'inbox' %>
              </li>
                <li class="dropdown">
                <%= link_to(raw("#{User.find_by_id(session[:user_id]).first_name}" +("<b class= 'caret'></b>")), "#", :class => "dropdown-toggle", :data => {:toggle=>"dropdown"}) %>
                <ul class="dropdown-menu">

                    <% userID=session[:user_id] %>
                    <% user=User.find_by_id(userID) do |user| %>
                   
                   <li><%= link_to "My Profile", controller: "users", action: "show" , :id => user.id, class: "link-profile" %></li>
                   <%end%>

                  <li class="divider"></li>
                  <li>
                    <%= link_to("Logout", {:controller => 'home', :action => 'sign_out'}) %>
                  </li>
                </ul>
              </li>

            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <!------------------- SIDEBAR -------------->
    <div id="hihi"></div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
         
          <% if session[:user_id] != nil %>
          <ul class="nav nav-sidebar">
              <li>
                <%= link_to "Add Doc", {:controller => "doc_users", :action => "index"} %>
             </li>
             <li>
                <%= link_to "Create a Poll", {:controller => "poll", :action => "poll_page"}%>
             </li>
             <li>
                <%= link_to "View all Polls", {:controller => "poll", :action => "view_polls"} %>
             </li>
             <li>
    <%#= button_to "Calendar", controller: "calendar", action: "show" %>
             <%= link_to "Calendar", calendar_path %>
             <small class="cust pull-right">
                <% @emails = Email.where(recipient: User.find_by_id(session[:user_id]).username).where(recieved_status: 'Unread')%>
                <b><%= @emails.size %></b>
                </small>
              </li>
             <li>
                <%= link_to "MailBox", {:controller => "mails", :action => "show_mails", :type => 'inbox'}, :onclick => "loadMailPage();" %>
             </li>
             <li>
                <br>
                <br>
                <br>
                 <span style="margin-left:15px;">
                  <b><%="Chats" %></b>
                  </span>
                 <% @users = User.all %>
                 <% @users.each do |user| %>
                 <% if(user.online) %>
                 <li> 
                 <span style="margin-left:15px;">
                 <b><%= link_to user.first_name, messages_path(id: user.id), remote: true %></b> 
                 </li>
                 </span>
                 <% else %>
                 <li>
                 <span style="margin-left:15px;">
                 <%= link_to user.first_name, messages_path(id: user.id), remote: true %></li> 
                 </span>
                 <% end %>
                 <br>
                 <% end %>
                 </span>
               <div id="chatbox" style="display: none; position: fixed; background: #fff; width:255px; height: 290px; z-index: 10; bottom: 50px; right: 0px;"></div>
             </li>
          </ul>
          <%end%>
        </div>
        <div id="content">
            <div class="col-md-10">
            <%= yield %>
            </div>
        </div>
      </div>

   
    </div>
    <!--  <div id="footer">
        <p ><center>Copyright © connectlls.com 2014</center></p>
    </div> -->
    <nav class=" navbar-fixed-bottom footer " role="navigation" >
  <div class="container footer" align="right";  >
    <p ><center>Copyright © connectlls.com 2014</center></p>
   
  </div>
</nav>
<!--     <div id="tip"></div> -->
    <script type='text/javascript'>
    function loadMailPage(){
      $("#hihi").load('mails/show_mails');
    }
  </script>
   
  <!-- // <script type="text/javascript" src="http://code.jquery.com/jquery-2.1.1.min.js"></script> -->
  <%= javascript_include_tag "jquery_ujs"%>
   <script>
    $(function() {
        var faye = new Faye.Client('http://localhost:9292/faye');
       
        faye.subscribe('/messages/new/<%= session[:user_id] %>', function (data) {
          eval(data);
         });

        faye.subscribe('/notifications/<%= session[:user_id] %>', function (data) {
          eval(data);
        });
        faye.subscribe('/notifications/events', function (data) {
          eval(data);
        });
      });

  </script>
   <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
  <%= javascript_include_tag "http://localhost:9292/faye.js" %>
  
</body>
</html>

