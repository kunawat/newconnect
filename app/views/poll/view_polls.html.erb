<br>
	<% user = User.find_by_id(session[:user_id]) %>
		<% allpoll = Poll.all %>
		<h1 style="margin-left:5px"> All Polls </h1>
		<br>
		<div>
			<table class="table table-hover table-condensed" style="margin-left:5px">
			    <thead>
			        <tr>
			            <th>Question</th>
			            <th>Link</th>
			        </tr>
		    	</thead>
				<% allpoll.each do |item| %>
					<tbody>
						<tr>
							<td>
								<%= item.question %>
							</td>
							<td>
					            <%= link_to "View result", {:action => "view_result", :poll_id => item.id} %>
					            <br>
								<%= link_to "Vote", {:action => "vote", :poll_id => item.id, :user_id => session[:user_id]} %> 
						 	 </td>
						</tr>
					</tbody>
				<% end %>
				<tfoot>
				 
				</tfoot>
			</table>
		</div>