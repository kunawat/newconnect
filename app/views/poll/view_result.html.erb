<br>
	<div class="col-md-5 col-md-offset-3" style="margin-top:40px; background:#FFFFFF; box-shadow:0px 0px 10px #666666; border:1px solid #CCCCCC;opacity: 0.8;filter:alpha(opacity=80);">

	<% whichpoll = Poll.find_by_id(session[:poll_id]) %>
		<% alloptions = whichpoll.poll_options %>
		<h1 style="margin-left:5px"> <%=whichpoll.question%> </h1>
		<div class ="line"></div>
		<br>
		<div>
			<table class="table table-hover table-condensed" style="margin-left:5px">
			    <thead>
			        <tr>
			            <th>Option</th>
			            <th>Number of Votes</th>
			        </tr>
		    	</thead>
				<% alloptions.each do |item| %>
				<% if(item.keyword != "") %>
					<tbody>
						<tr>
							<td>
								<%= item.keyword %>
							</td>
							<td>
					            <%= item.votes %>
					            <br> 
						 	 </td>
						</tr>	
					</tbody>
				<% end %>	
				<% end %>
				<tfoot>
				 
				</tfoot>
			</table>
		</div>
		</div>